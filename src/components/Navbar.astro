---
const links = [
  { href: "/", label: "Home" },
  { href: "/portfolio", label: "Portfolio" },
  { href: "/about", label: "About" },
  { href: "/contact", label: "Contact" },
];
---

<!-- Logo Assembly -->
<div class="flex flex-col items-center mt-10 mb-6">
  <div class="flex items-center gap-6">
    <!-- 3D Globe -->
    <div class="w-48 h-48">
    
    </div>

    <!-- Two-line Text -->
    <div class="text-center">
      
    </div>
  </div>

  <!-- Navbar -->
  <nav class="transform -skew-x-12 bg-zinc-900 text-white shadow-lg mt-6 py-4 w-full max-w-4xl">
    <div class="flex justify-center gap-10 transform skew-x-12">
      {links.map(link => (
        <a href={link.href} class="hover:text-blue-400 transition">{link.label}</a>
      ))}
    </div>
  </nav>
</div>
